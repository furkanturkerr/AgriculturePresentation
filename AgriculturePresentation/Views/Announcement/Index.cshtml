@model System.Collections.Generic.List<Entity.Concrate.Announcements>


@{
    Layout = "AdminLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th> 
                        <th>Tarih</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                        <th>Durum</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AnnouncementsId</td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementsId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementsId" class="btn btn-outline-success">Düzenle</a></td>
                            @if (@item.Status == true)
                            {
                                <td><a href="Announcement/ChangeStatusFalse/@item.AnnouncementsId" class="btn btn-outline-secondary">Pasif Yap</a></td>
                            }
                            @if (@item.Status == false)
                            {
                                <td><a href="Announcement/ChangeStatusTrue/@item.AnnouncementsId" class="btn btn-outline-secondary">Aktif Yap</a></td>
                            }
                        </tr>
                    }
                    </tbody>
                </table>
                @ViewBag.Message
                <br/>
                <a href="/Announcement/AddAnnouncement/" class="btn btn-outline-primary">Ekle</a>
            </div>
        </div>
    </div>
</div>