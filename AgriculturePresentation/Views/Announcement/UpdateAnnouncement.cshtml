@model Entity.Concrate.Announcements

@{
    ViewBag.Title = "title";
    Layout = "AdminLayout";
}

<h2>Yeni Hizmet Girişi</h2>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x => x.AnnouncementsId)
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" placeholder="Başlık giriniz." asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Tarih Giriniz</label>
                    <input type="date" class="form-control" placeholder="Tarih Giriniz" asp-for="Date">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>