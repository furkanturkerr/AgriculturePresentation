@model Entity.Concrate.Contact

@{
    ViewBag.Title = "title";
    Layout = "AdminLayout";
}

<h2>Yeni Hizmet Girişi</h2>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x => x.ContactId)
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" class="form-control"  asp-for="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="text" class="form-control"  asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input type="text" class="form-control" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Mesaj Detayı</label>
                    <textarea class="form-control" cols="5" rows="20" asp-for="Message"></textarea>
                </div>
            </form>
        </div>
    </div>
</div>