@model System.Collections.Generic.List<Entity.Concrate.Contact>

@{
    Layout = "AdminLayout";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listesi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>ID</th> 
                        <th>Ad Soyad</th>
                        <th>Mail</th>
                        <th>Tarih</th>
                        <th>Mesajı Gör</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ContactId</td>
                            <td>@item.Name</td>
                            <td>@item.Email</td>
                            <td>@item.Date</td>
                            <td><a href="Contact/MessageDetailes/@item.ContactId" class="btn btn-outline-primary">Mesaj Gör</a></td>
                        </tr>
                    }
                    </tbody>
                </table>
                @ViewBag.Message
            </div>
        </div>
    </div>
</div>