@model System.Collections.Generic.List<Entity.Concrate.Image>

@{
    Layout = "AdminLayout";
}

            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Görsel Listesi</h4>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                      <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                      </tr>
                      </thead>
                      <tbody>
                      @foreach (var item in Model)
                      {
                        <tr>
                          <td class="py-1"><img src="@item.ImageUrl" alt="image"/></td>
                          <td>@item.Title</td>
                          <td><a href="/ImageController1/DeleteImage/@item.ImageId" class="btn btn-outline-danger">Sil</a></td>
                          <td><a href="/ImageController1/UpdateImage/@item.ImageId" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                      }
                      </tbody>
                    </table>
                    <a href="/ImageController1/AddImage" class="btn btn-outline-success">Yeni Görsel Girişi</a>
                  </div>
                </div>
              </div>
            </div>